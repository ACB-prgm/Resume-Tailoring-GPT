{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://career-corpus-memory/preferences.schema.json",
  "title": "User Preferences",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "formatting",
    "process",
    "output_defaults",
    "metadata"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "formatting": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "tone",
        "bullet_style",
        "page_target_default",
        "allow_two_pages_for_senior"
      ],
      "properties": {
        "tone": {
          "type": "string",
          "enum": [
            "direct",
            "executive",
            "concise",
            "neutral"
          ]
        },
        "bullet_style": {
          "type": "string",
          "enum": [
            "impact_first",
            "task_first"
          ]
        },
        "page_target_default": {
          "type": "integer",
          "enum": [
            1
          ]
        },
        "allow_two_pages_for_senior": {
          "type": "boolean"
        }
      }
    },
    "process": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "ask_before_persisting_new_facts",
        "strict_evidence_only",
        "schema_hard_fail"
      ],
      "properties": {
        "ask_before_persisting_new_facts": {
          "type": "boolean"
        },
        "strict_evidence_only": {
          "type": "boolean"
        },
        "schema_hard_fail": {
          "type": "boolean",
          "enum": [
            true
          ]
        },
        "memory_status_visibility": {
          "type": "string",
          "enum": [
            "on_change",
            "on_request",
            "always"
          ]
        },
        "user_git_fluency": {
          "type": "string",
          "enum": [
            "unknown",
            "non_technical",
            "technical"
          ]
        }
      }
    },
    "output_defaults": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "naming_convention",
        "change_log_preferences"
      ],
      "properties": {
        "naming_convention": {
          "type": "string"
        },
        "change_log_preferences": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "include_keywords",
            "include_emphasized_roles",
            "include_exclusions",
            "include_assumptions"
          ],
          "properties": {
            "include_keywords": {
              "type": "boolean"
            },
            "include_emphasized_roles": {
              "type": "boolean"
            },
            "include_exclusions": {
              "type": "boolean"
            },
            "include_assumptions": {
              "type": "boolean"
            }
          }
        }
      }
    },
    "metadata": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "last_updated_utc"
      ],
      "properties": {
        "last_updated_utc": {
          "type": "string",
          "format": "date-time"
        }
      }
    }
  }
}
