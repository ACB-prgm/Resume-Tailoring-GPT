{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://career-corpus-memory/career_corpus.schema.json",
  "title": "Career Corpus",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "profile",
    "experience",
    "projects",
    "certifications",
    "education",
    "metadata"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "profile": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "full_name",
        "skills"
      ],
      "properties": {
        "full_name": {
          "type": "string",
          "minLength": 1
        },
        "location": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "phone": {
          "type": "string"
        },
        "links": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "name",
              "url"
            ],
            "properties": {
              "name": {
                "type": "string",
                "minLength": 1
              },
              "url": {
                "type": "string",
                "minLength": 1
              }
            }
          }
        },
        "skills": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "technical",
            "platforms",
            "methods",
            "domains"
          ],
          "properties": {
            "technical": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "platforms": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "methods": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "domains": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "notes": {
              "type": [
                "string",
                "null"
              ]
            }
          }
        },
        "notes": {
          "type": [
            "string",
            "null"
          ]
        }
      }
    },
    "experience": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "employer",
          "title",
          "start_date",
          "end_date",
          "location",
          "bullets",
          "tools",
          "outcomes",
          "domain_tags"
        ],
        "properties": {
          "id": {
            "type": "string",
            "minLength": 1
          },
          "employer": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "start_date": {
            "type": "string"
          },
          "end_date": {
            "type": [
              "string",
              "null"
            ]
          },
          "location": {
            "type": "string"
          },
          "bullets": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "tools": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "outcomes": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "domain_tags": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "notes": {
            "type": [
              "string",
              "null"
            ]
          }
        }
      }
    },
    "projects": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "name",
          "role",
          "stack",
          "outcomes"
        ],
        "properties": {
          "id": {
            "type": "string",
            "minLength": 1
          },
          "name": {
            "type": "string"
          },
          "role": {
            "type": "string"
          },
          "stack": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "outcomes": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "description": {
            "type": "string"
          },
          "notes": {
            "type": [
              "string",
              "null"
            ]
          }
        }
      }
    },
    "certifications": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "name",
          "issuer",
          "status"
        ],
        "properties": {
          "id": {
            "type": "string",
            "minLength": 1
          },
          "name": {
            "type": "string"
          },
          "issuer": {
            "type": "string"
          },
          "issue_date": {
            "type": "string"
          },
          "status": {
            "type": "string"
          },
          "notes": {
            "type": [
              "string",
              "null"
            ]
          }
        }
      }
    },
    "education": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "degree",
          "institution",
          "graduation_year"
        ],
        "properties": {
          "id": {
            "type": "string",
            "minLength": 1
          },
          "degree": {
            "type": "string"
          },
          "institution": {
            "type": "string"
          },
          "graduation_year": {
            "type": [
              "integer",
              "string"
            ]
          },
          "field_of_study": {
            "type": "string"
          },
          "notes": {
            "type": [
              "string",
              "null"
            ]
          }
        }
      }
    },
    "metadata": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "last_updated_utc",
        "source"
      ],
      "properties": {
        "last_updated_utc": {
          "type": "string",
          "format": "date-time"
        },
        "source": {
          "type": "string",
          "enum": [
            "onboarding",
            "user_update",
            "manual_import"
          ]
        },
        "onboarding_complete": {
          "type": "boolean"
        },
        "onboarding_completed_utc": {
          "type": "string",
          "format": "date-time"
        }
      }
    }
  }
}
