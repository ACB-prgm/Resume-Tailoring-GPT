{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://career-corpus-memory/knowledge_files/career_corpus.schema.json",
  "title": "Career Corpus",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "profile",
    "summary_facts",
    "experience",
    "projects",
    "skills",
    "certifications",
    "education",
    "metadata"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "profile": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "full_name"
      ],
      "properties": {
        "full_name": {
          "type": "string",
          "minLength": 1
        },
        "location": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "phone": {
          "type": "string"
        },
        "links": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "summary_facts": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "experience": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "employer",
          "title",
          "start_date",
          "end_date",
          "location",
          "bullets",
          "tools",
          "outcomes",
          "domain_tags"
        ],
        "properties": {
          "employer": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "start_date": {
            "type": "string"
          },
          "end_date": {
            "type": [
              "string",
              "null"
            ]
          },
          "location": {
            "type": "string"
          },
          "bullets": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "tools": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "outcomes": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "domain_tags": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    },
    "projects": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "name",
          "role",
          "stack",
          "outcomes"
        ],
        "properties": {
          "name": {
            "type": "string"
          },
          "role": {
            "type": "string"
          },
          "stack": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "outcomes": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "description": {
            "type": "string"
          }
        }
      }
    },
    "skills": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "technical",
        "platforms",
        "methods",
        "domains"
      ],
      "properties": {
        "technical": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "platforms": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "methods": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "domains": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "certifications": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "name",
          "issuer",
          "status"
        ],
        "properties": {
          "name": {
            "type": "string"
          },
          "issuer": {
            "type": "string"
          },
          "issue_date": {
            "type": "string"
          },
          "status": {
            "type": "string"
          }
        }
      }
    },
    "education": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "degree",
          "institution",
          "graduation_year"
        ],
        "properties": {
          "degree": {
            "type": "string"
          },
          "institution": {
            "type": "string"
          },
          "graduation_year": {
            "type": [
              "integer",
              "string"
            ]
          },
          "field_of_study": {
            "type": "string"
          }
        }
      }
    },
    "metadata": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "last_updated_utc",
        "source"
      ],
      "properties": {
        "last_updated_utc": {
          "type": "string",
          "format": "date-time"
        },
        "source": {
          "type": "string",
          "enum": [
            "onboarding",
            "user_update",
            "manual_import"
          ]
        }
      }
    }
  }
}
